    head
        title= `loginPage` 
    body
        h1 Sign in
          form(action='/loginpage/login_confirm', method='POST')
            p
                | email:
                input(type='text', id=`email`, name='email', value='')
                br
                | password: 
                input(type='password',id=`password`, name='password', value='')
                br
                input(type='submit', value='Submit')