html
    head
        meta(charset='utf-8')
        title= `work_files_add`
        link(rel="stylesheet", href="/public/css/work_files_add.css")
    body
        div(class= 'page_contents')
            h1 work files add
            br
            form(action = '/mainpage/work_list/work_files/work_files_add/confirm', enctype = 'multipart/form-data', accept-charset='UTF-8', method = 'POST')
                br
                br
                p file upload  
                br
                input(type='file', id=`upload_file`, name='upload_file', value='')
                br
                br
                input(type=`hidden`, id=`work_id`, name=`work_id` , value = work_id)
                input(type=`hidden`, id=`company_id`, name=`company_id` , value = company_id)
                button(type='submit', value='Submit') submit
                